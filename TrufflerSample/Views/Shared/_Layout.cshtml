<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>

<body>
    <div class="topbar">
      <div class="fill">
        <div class="container">
          @Html.ActionLink("Truffler Sample", "Index", "Search", null, new { @class = "brand" })
          <ul class="nav">
            <li>@Html.ActionLink("Home", "Index", "Search")</li>
            <li>@Html.ActionLink("Basic", "Basic", "Search")</li>
            <li>@Html.ActionLink("Paging", "Paging", "Search")</li>
            <li>@Html.ActionLink("Highlighting", "Highlighting", "Search")</li>
            <li>@Html.ActionLink("Facets", "Facets", "Search")</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="container">
        <div class="content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
