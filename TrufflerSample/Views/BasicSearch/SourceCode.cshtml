    .For(q)
    .Select(x => new SearchHit
        {
            Title = x.Name,
            Url = x.Website ?? x.WikipediaUrl,
            Location = new List<string> { x.StreetAddress, x.City, x.Country }.Concatenate(", "),
            MichelinRating = x.MichelinRating ?? 0
        })
